<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yline.fresco.view.FrescoView
        android:id="@+id/callback_fresco_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:actualImageScaleType="centerCrop"
        app:fadeDuration="1000"
        app:retryImage="@drawable/image_retry"
        app:retryImageScaleType="centerCrop"
        app:viewAspectRatio="0.6" />

    <TextView
        android:id="@+id/callback_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callback_fresco_view"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:textIsSelectable="true" />
</RelativeLayout>
